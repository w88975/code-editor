:host {
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    min-width: 800px

    display: flex
    flex-direction: column
    flex-wrap: nowrap
    align-items: stretch

    .status-bar {
        width: 100%
        line-height: 20px
        box-shadow:0 0 5px #000
        z-index: 997
    }

    .space{
        width: 10px
        height: 10px
    }

    .space-2{
        width: 20px
        height: 20px
    }

    .space-3{
        width: 30px
        height: 30px
    }

    .label {
        color: gray
    }

    .jshint {
        color: red
    }

    .topbar {
        box-shadow: 0 0 5px #000
        z-index: 5
        border-bottom-left-radius: 5px
        border-bottom-right-radius: 5px
    }
}
