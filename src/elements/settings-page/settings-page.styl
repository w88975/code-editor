:host {
    width: 600px
    position: absolute
    margin-left: 50%
    left: -300px
    z-index: 999
    background: rgb(48,48,48)
    font-family: Helvetica,Arial,sans-serif
    color: #aaa
    border-radius: 5px
    box-shadow: 0 0 5px gray
    font-size: 12px
    overflow: hidden

    .prop {
        height: 24px
        margin-bottom: 4px
        margin-top: 4px
    }

    .bar {
        width: 100%
        height: 22px
        background: rgb(36,36,36)
        border-bottom-left-radius: 5px
        border-bottom-right-radius: 5px
        border-top: 1px solid rgb(71,71,71)
        padding: 5px
        fire-ui-button {
            float: right
            margin-right: 15px
        }
    }

    .title {
        height: 22px
        width: 100%
        background: rgb(36,36,36)
        border-bottom: 1px solid rgb(71,71,71)
        color: white
        padding-left: 10px
        font-size: 12px
        fire-ui-label {
            line-height: 22px
        }
    }

    .section{

        padding: 5px
    }
}
